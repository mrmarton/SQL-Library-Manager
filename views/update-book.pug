extends layout.pug

block content
    h1 Update Book
    include error
            
        form(action=`/books/${books.id}` , method="post")
            p
                label(for="title") Title
                input(name="title", type="text", id="title", value=`${books.title}`)
            p
                label(for="author") Author
                input(name="author", type="text", id="author", value=`${books.author}`)
            p
                label(for="genre") Genre
                input(name="genre", type="text", id="genre", value=`${books.genre}`)
            p
                label(for="year") Year
                input(name="year", type="text", id="year", value=`${books.year}`)

            p
                input(type='submit' value='Update Book')    
   
        form(action=`/books/${books.id}/delete`, method="post" onsubmit="return confirm('Are You sure? this book will be gone!');")
            p
                a.button(href='/') Cancel
            p
                input(type='submit' value="Delete Book") 